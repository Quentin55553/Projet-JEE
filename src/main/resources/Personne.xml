<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="org.jee.Data.Personne">
        <table name="personne" schema="gestion_scolarite" catalog=""/>
        <attributes>
            <id name="id">
                <column name="id_personne"/>
            </id>
            <basic name="nom">
                <column name="nom"/>
            </basic>
            <basic name="prenom">
                <column name="prenom"/>
            </basic>
            <basic name="dateNaissance">
                <column name="date_naissance"/>
            </basic>
            <basic name="mail">
                <column name="contact"/>
            </basic>
            <basic name="role">
                <column name="role"/>
            </basic>
            <one-to-many name="coursByIdPersonne" mapped-by="personneByIdEnseignant" target-entity="org.jee.Data.Cours"/>
            <one-to-many name="inscriptionsByIdPersonne" mapped-by="personneByIdEtudiant"
                         target-entity="org.jee.Data.Inscription"/>
            <one-to-many name="resultatsByIdPersonne" mapped-by="personneByIdEtudiant" target-entity="org.jee.Data.Resultat"/>
        </attributes>
    </entity>
</entity-mappings>
